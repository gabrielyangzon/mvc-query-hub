@model mvc_query_hub.Models.QueryComments

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>QueryComments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="QueryComments" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QueryId" class="control-label"></label>
                <input asp-for="QueryId" value="@ViewData["queryId"]" class="form-control" />
                <span asp-validation-for="QueryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="PipingQuery"
       asp-action="Details"
       asp-route-id="@ViewData["queryId"]">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
